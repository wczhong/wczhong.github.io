</pre></td><td class="rouge-code"><pre>package main

import (
	"fmt"
	"sync"
)

func main() {
	var once sync.Once
	onceBody := func() {
		fmt.Println("Only once")
	}
	done := make(chan bool)
	for i := 0; i &lt; 10; i++ {
		go func() {
			once.Do(onceBody)
			done &lt;- true
		}()
	}
	for i := 0; i &lt; 10; i++ {
		&lt;-done
	}
}
